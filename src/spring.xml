<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   <bean id="triangle" class="com.jayram.Triangle" scope="singleton" autowire="byName"> <!--By default there is no auto wiring. By using Auto wire there is no need to specify explicit wiring by specifying <property>. Spring handles it intelligently. So, With 'byName' auto wire, Class member variable name must match with bean definition id here. -->
   </bean>
   
   <!--Consider, triangle points are (0,0)(-20,0)(20,0) -->
   <bean id="pointA" class="com.jayram.Point">
   		<property name="x" value="0"></property>
   		<property name="y" value="0"></property>
   </bean>
   <bean id="pointB" class="com.jayram.Point">
		<property name="x" value="-20"></property>
		<property name="y" value="0"></property>
   </bean>
   <bean id="pointC" class="com.jayram.Point">
		<property name="x" value="20"></property>
		<property name="y" value="0"></property>
   </bean>
   
</beans>
