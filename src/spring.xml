<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
   <bean id="triangle" class="com.jayram.Triangle" >
   		<constructor-arg index="0" type="String" value="Equilateral"/> <!-- Pre-setting bean properties via constructor injection -->
   		<constructor-arg index="1" type="int" value="20"/> <!-- Using type & index attribute to resolve any possible conflicts-->
   </bean>
</beans>
