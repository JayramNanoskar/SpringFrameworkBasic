<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   <bean id="parentTriangle" class="com.jayram.Triangle" abstract="true"> <!--abstract="true" means spring won't instantiate this bean, it uses this bean as just reference  -->
   		<property name="pointA" ref="pointA"></property>
   </bean>
   <bean id="triangle1" class="com.jayram.Triangle" parent="parentTriangle"> <!-- Inheriting Bean definition -->
   		<property name="pointB" ref="pointB"></property>
   		<property name="pointC" ref="pointC"></property>
   </bean>
   
   <!--Consider, triangle points are (0,0)(-20,0)(20,0) -->
   <bean id="pointA" class="com.jayram.Point">
   		<property name="x" value="0"></property>
   		<property name="y" value="0"></property>
   </bean>
   <bean id="pointB" class="com.jayram.Point">
		<property name="x" value="-20"></property>
		<property name="y" value="0"></property>
   </bean>
   <bean id="pointC" class="com.jayram.Point">
		<property name="x" value="20"></property>
		<property name="y" value="0"></property>
   </bean>
   
</beans>
